<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="100pt"
            android:layout_height="match_parent"
            android:textColor="#aaa"
            android:text="Guest85456"
            android:textAlignment="center"
            android:textSize="10pt"
            android:padding="5pt"
            android:id="@+id/nickname_text" />
        <TextView
            android:layout_width="10pt"
            android:layout_height="match_parent"
            android:textSize="10pt"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#aaa"
            android:id="@+id/coins_text"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="17pt"
            android:layout_height="17pt"
            android:layout_margin="2pt"
            android:src="@mipmap/coin"
            android:id="@+id/CoinImage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Prosim nemnen vysku toho uvodniho obrazku jen sirku, diky. -->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal">
           <ImageView
               android:layout_width="150pt"
               android:layout_height="100pt"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="5pt"
               android:layout_marginBottom="5pt"
               android:background="@color/mujPodkladPrvku"
               android:id="@+id/latinska_slovicka_text" />
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="top">


               </LinearLayout>

           </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Procvičování"
            android:textColor="@color/mujText"
            android:background="@color/mujPodkladPrvku"
            android:layout_marginTop="20pt"
            android:layout_marginBottom="2pt"
            android:layout_marginLeft="20pt"
            android:layout_marginRight="20pt"
            android:textSize="10pt"
            android:id="@+id/main_menu_button_procvicovani"
            android:onClick="ProcvicovaniOnClick" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textColor="@color/mujText"
            android:background="@color/mujPodkladPrvku"
            android:layout_marginTop="2pt"
            android:layout_marginBottom="2pt"
            android:layout_marginLeft="20pt"
            android:layout_marginRight="20pt"
            android:textSize="10pt"
            android:id="@+id/main_menu_button_test"
            android:onClick="TestOnClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nastavení"
            android:textColor="@color/mujText"
            android:background="@color/mujPodkladPrvku"
            android:layout_marginTop="2pt"
            android:layout_marginBottom="2pt"
            android:layout_marginLeft="20pt"
            android:layout_marginRight="20pt"
            android:textSize="10pt"
            android:id="@+id/main_menu_button_nastaveni"
            android:onClick="NastaveniOnClick" />

    </LinearLayout>

</LinearLayout>

